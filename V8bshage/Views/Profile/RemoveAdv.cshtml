@model V8bshage.Models.Advertisement

<form method="post" asp-controller="Profile" asp-action="RemoveAdvPost">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="border p-3">
        <div class="form-group row">
            <h2>Удалить объявление</h2>
        </div>
        <input asp-for="AdvId" hidden/>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Title" disabled class="form-control">
                    </div>
                    <div class="col-4">
                        <input asp-for="Description" disabled class="form-control">
                    </div>
                    <div class="col-4">
                        <input asp-for="Price" disabled class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Удалить">
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>