@model IEnumerable<V8bshage.Models.News>


<link href="css/news.css" rel="stylesheet" />

<section class="grid">
    @foreach (var news in Model)
    {
        <article class="grid-item">
            <div class="image">
                <img src="data:image/jpeg;base64,@(Convert.ToBase64String(news.Photo))" />
            </div>
            <div class="info">
                <h2>@news.Title</h2>
                <div class="button-wrap">
                    <a class="atuin-btn" asp-controller="News" asp-action="Info">Подробнее</a>
                </div>
            </div>
        </article>
    }
</section>